<script type='text/javascript'>

$(function() {
  // These settings override the defaults set in application.coffee.
  Dashing.numColumns = 14;
});
</script>

<script type='text/javascript'>
 $(function() {
   Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":2,"size_y":2},{"col":3,"row":1,"size_x":1,"size_y":1},{"col":3,"row":2,"size_x":1,"size_y":1},{"col":4,"row":1,"size_x":2,"size_y":2}]')
 });
 </script>

<% content_for :title do %>Harley Home<% end %>

<div class="gridster">

    <ul>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2";>
      <div data-id="temperatures"
      data-view="HotMeterBars"
      data-title="Temperatures">
      </div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="WattsonPowerGrid"
	   data-view="Meter"
	   data-min=0
	   data-max=4000
	   data-title="Energy Usage"
	   style="background-color:#9F5C67"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="WattsonPowerSolar"
	   data-view="Meter"
	   data-min=0
	   data-max=4000
	   data-title="Solar Power" 
	   style="background-color:#96BF48"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="2";>
      <div data-id="energy"
      data-view="Rickshawgraph"
      data-title="Energy"
      data-color-scheme="rainbow"
      data-legend="true"
      data-unstack="true"
      data-max=3000
      data-default-alpha=0.5
      style="background-color:#ccc;">
      </div>
    </li>

  </ul>

</div>
